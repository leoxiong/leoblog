{{!< default}}
{{#post}}
    <article class="l-article {{post_class}}">
        <header class="l-article-header">
            <h1 class="l-header-title">{{title}}</h1>
            <div class="l-header-byline">
                <time class="l-byline-date" datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time>
                {{#if tags }}
                    <span class="l-tags">
                        {{tags separator=" "}}
                    </span>
                {{/if}}
            </div>

            {{#if feature_image}}
                <figure class="l-header-feature">
                    <div>
                        <img src="{{img_url feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"/>
                    </div>
                    {{#if feature_image_caption}}
                        <figcaption>{{feature_image_caption}}</figcaption>
                    {{/if}}
                </figure>
            {{/if}}
        </header>

        <section class="l-article-content">
            {{content}}
        </section>
    </article>
{{/post}}
